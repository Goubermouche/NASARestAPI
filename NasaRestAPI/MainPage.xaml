<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NasaRestAPI" xmlns:renderers="clr-namespace:NasaRestAPI.Renderers"
             x:Class="NasaRestAPI.MainPage">

    <ContentPage.BindingContext>
        <local:ProductInfoViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout 
            BackgroundColor="{StaticResource BackgroundColor}"
            Padding="5, 0, 5, 0">


            <renderers:Entry
                BackgroundColor="{StaticResource BackgroundColorSecondary}"
                TextColor="White"
                BorderColor="{StaticResource BackgroundColorSecondary}" 
                 FontSize="18"
                CornerRadius="10" 
                BorderWidth="5" 
                HeightRequest="40"
                Padding="30, 20, 30, 20"/>

            <renderers:Entry
                BackgroundColor="{StaticResource BackgroundColorSecondary}"
                TextColor="White"
                BorderColor="{StaticResource BackgroundColorSecondary}" 
                 FontSize="18"
                CornerRadius="10" 
                BorderWidth="5" 
                HeightRequest="40"
                Padding="30, 20, 30, 20"/>

            <renderers:SearchBar 
                BackgroundColor="{StaticResource BackgroundColorSecondary}"
                TextColor="White"
                BorderColor="{StaticResource BackgroundColorSecondary}" 
                SearchIconColor="White"
                CancelButtonColor="White"
                FontSize="18"
                CornerRadius="10" 
                BorderWidth="5" 
                HeightRequest="40"
                Padding="-24, -16, -18, -16"/>

            <renderers:SearchBar 
                BackgroundColor="{StaticResource BackgroundColorSecondary}"
                TextColor="White"
                BorderColor="{StaticResource BackgroundColorSecondary}" 
                SearchIconColor="White"
                CancelButtonColor="White"
                FontSize="18"
                CornerRadius="10" 
                BorderWidth="5" 
                HeightRequest="40"
                Padding="-24, -16, -18, -16"/>

            <RefreshView 
                RefreshColor="Red" 
                BackgroundColor="Lime" 
                IsRefreshing="{Binding IsRefreshing, Mode=OneWay}"
                Command="{Binding RefreshCommand}">
                
                <ListView ItemsSource="{Binding ItemList}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell 
                                Text="{Binding Name}"
                                Detail="{Binding ID}"/>
                            
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </RefreshView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>